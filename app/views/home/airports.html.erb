<% content_for :app_controller do %>
  ng-app='app.geoflightsApp' ng-controller='AirportsCtrl'
<% end %>

<div class="navmenu navmenu-default navmenu-fixed-left offcanvas in canvas-slid navmenu-float">
    <ul class="nav navmenu-nav">
        <li><a href="#" ng-click="resetCamera()">Reset origin of camera</a></li>
        <li><a href="#" ng-click="resetZoom()">Reset Zoom</a></li>
    </ul>
</div>

<div class="col-md-12 status">
    <div ng-if="selected_airport.status">
        <h3>Selected Airport</h3>
        <h5><b>{{selected_airport.name}}</b></h5>
        <p><b>City:</b> {{selected_airport.city}}</p>
        <p><b>Country:</b> {{selected_airport.country}}</p>
        <p><b>IATA:</b> {{selected_airport.iata.length > 0 ? selected_airport.iata : 'Unknown'}}</p>
        <p><b>ICAO:</b> {{selected_airport.icao.length > 0 ? selected_airport.icao : 'Unknown'}}</p>
        <p><b>Timezone:</b> {{selected_airport.timezone}}</p>
        <p title="One of E (Europe), A (US/Canada), S (South America), O (Australia), Z (New Zealand), N (None) or U (Unknown)"><b>Daylight savings time:</b> {{selected_airport.dst.length > 0 ? selected_airport.dst : 'Unknown'}}</p>
        <p title="Timezone in 'tz' (Olson) format, eg. 'America/Los_Angeles'"><b>Tz database time zone:</b> {{selected_airport.tz}}</p>
        <p><b>Longitude:</b> {{selected_airport.longitude}}</p>
        <p><b>Latitude:</b> {{selected_airport.latitude}}</p>
        <li ng-click="showDestinations(selected_airport.id)"><a>Show destinations</a></li>
        <li ng-click="showOrigins(selected_airport.id)"><a>Show origins</a></li>
    </div>
</div>
