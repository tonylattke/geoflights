<% content_for :app_controller do %>
  ng-app='app.geoflightsApp' ng-controller='CountriesCtrl'
<% end %>

<div class="navmenu navmenu-default navmenu-fixed-left offcanvas in canvas-slid navmenu-float">
    <ul class="nav navmenu-nav">
        <li><a href="#" ng-click="resetCamera()">Reset origin of camera</a></li>
        <li><a href="#" ng-click="resetZoom()">Reset Zoom</a></li>
    </ul>
</div>

<div class="col-md-12 status">
    <div ng-if="selected_country.status">
        <h3>Selected Country</h3>
        <p><b>{{selected_country.name}}</b></p>
        <p>Available Airlines:</p>
        <ul class="airlines">
            <li ng-repeat="airline in selected_country.airlines" ng-click="selectAirline(airline)" class="{{ airline.selected ? 'airline-selected' : 'airline-noselected' }}">
                {{airline.name}}
            </li>
        </ul>
        <div ng-if="selected_airline.airline.selected == true">
            <p>Is connected with:</p>
            <ul class="countries">
                <li ng-repeat="country in selected_airline.countries">
                    {{country.name}}
                </li>
            </ul>
            <p ng-if="selected_airline.countries.length == 0">
                No coutries connected with this airline
            </p>
        </div>
        
    </div>
</div>